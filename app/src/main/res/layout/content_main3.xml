<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.afroz.watermanagementsystem.Main2Activity"
    tools:showIn="@layout/activity_main3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/soil2"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="328dp">

        <Button
            android:id="@+id/button5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="28dp"
            android:background="@android:color/holo_orange_light"
            android:text="Check Whether Forecast"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button3"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/button3"
            android:background="@android:drawable/toast_frame"
            android:backgroundTint="?android:attr/colorActivatedHighlight"
            android:text="0%"
            android:textColor="@android:color/background_light"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button4"
            android:layout_below="@+id/button4"
            android:background="@android:color/holo_green_light"
            android:text="Soil Moisture Content"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="55dp"
            android:background="@android:color/holo_green_dark"
            android:text="Soil Type"
            android:textColor="@android:color/background_light" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button4"
            android:layout_alignBottom="@+id/button4"
            android:layout_toEndOf="@+id/button4"
            android:text="  Black Cotton"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
